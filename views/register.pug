  title movietrends

block content
  
  .container
    .row.justify-content-md-center
      .col-md-auto
        a(href='/')
          img(src='/img/logo.png' alt='MovieTrends')
    .card.mb-3.justify-content-md-center(style='max-width: 540px;')
      .card-header
        h4 Create your account
      .container
        form(action="/register",  method="post")
          .mb-3
            label.form-label(for='username') Your name
            input.form-control(type='text' name= 'username' required='required')
          .mb-3
            label.form-label(for='exampleInputEmail1') Email address
            input#exampleInputEmail1.form-control(type='email'  name='email' required='required' aria-describedby='emailHelp')
            #emailHelp.form-text We&apos;ll never share your email with anyone else.
          .mb-3
            label.form-label(for='exampleInputPassword1') Password
            input#exampleInputPassword1.form-control(type='password'  name='password' required='required')
          button.btn.btn-primary(type='submit') Register
          p or 
            a(href="/login") Login 
      br
  .container-fluid
      footer.bs-docs-footer
        .container-fluid(style='background-color: #080808;')
          .row
            div(clas='col-md-4 col-md-offset-1')
              a(href='#') Help
              br
              a(href='#') About MovieTrends
              br
              a(href='#') Contact Us
            .col-md-4
            p Follow MovieTrends
            div
        .row
